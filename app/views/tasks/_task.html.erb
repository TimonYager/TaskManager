<div class="row clearfix">
	
	<% if task.completed? %>
		<div class="task">
			<p class="content, "style="opacity: 0.4;"><strike><%= task.content %></strike></p>
		</div>
		<div class="task_options">
			<%= link_to "Delete", project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
		<% else %>
			<div class="task">
				<p class="content"><%= task.content %></p>
				<p class="deadline">To do up to: <%= task.deadline %></p>
			</div>
			<div class="task_options">
				<%= link_to "Mark as Complete", complete_project_task_path(@project, task.id), method: :patch %> |
				<%= link_to "Delete", project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
			</div>
	<% end %>

</div>